# YouTube Curator v2 Configuration
# Copy this file to .env and fill in your actual values

# Database path
DB_PATH=./youtubecurator.db

# Channels file (for backwards compatibility)
CHANNELS_FILE=./channels.txt

# SMTP Configuration (Required)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@mail.com
SMTP_PASSWORD=your-app-password-here
RECIPIENT_EMAIL=recipient@example.com

# API Configuration
ENABLE_API=true
API_PORT=8080

# Optional Configuration
CHECK_INTERVAL=1h
DEBUG_MOCK_RSS=false
DEBUG_SKIP_CRON=false

# Scheduling mode: 'interval' (default, uses CHECK_INTERVAL) or 'daily' (uses DAILY_RUN_TIME)
SCHEDULE_MODE=interval
# Time of day to run in 'daily' mode (24h format, e.g. 07:00 for 7 AM)
DAILY_RUN_TIME=07:00 